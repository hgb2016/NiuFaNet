<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="@dimen/dimen_left"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_left"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:text="用户名"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:text="18277750576"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/addfrends_tv"
        android:layout_width="wrap_content"
        android:text="添加"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingLeft="@dimen/dimen_left"
        android:textColor="@color/white"
        android:paddingRight="@dimen/dimen_left"
        android:background="@drawable/shape_addfrends"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
